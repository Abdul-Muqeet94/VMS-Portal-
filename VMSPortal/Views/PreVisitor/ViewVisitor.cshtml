@{
    ViewBag.Title = "EditVisitor";
    Layout = "~/Views/Shared/_LayoutVisitor.cshtml";
}
@model  List<BLL.ViewModels.PreVisitors>
@using (Html.BeginForm("ViewVisitor", "PreVisitor", FormMethod.Post, new { id = "Visitor-form" }))
        {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    
     <div class="form-group col-md-3">
      <div class="row">
                <div class="col-md-12">
                    <label class="control-label">From Date</label>
                    <input type="text" class="form-control datepicker" name="from_date" style="background-color: #FFF" required>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <label class="control-label">To Date</label>
                    <input type="text" class="form-control datepicker" name="to_date" style="background-color: #FFF" required>
                </div>
            </div>
     <div class="row">
                    <div class="col-md-12" style="margin-top:5px">
                        <button class="btn btn-primary" type="submit" value="Submit">Get Report</button>
                        <button class="btn btn-primary"  type="reset" value="Reset">Reset</button>
                    </div>
                </div>
         </div>
    <div class="row">
<table id="visitor-table" class="table table-bordered table-condensed table-hover table-striped" >
    <tr>
        <th>
           Visitor Nic
        </th>
        <th>
           Visitor First Name
        </th>
        <th>
           Visitor Last Name
        </th>
        <th>
           Visitor Contact#
        </th>
        <th>
            Host Name
        </th>
        <th>
            Host Email Address
        </th>
        <th>
            Visiting Date
        </th>
        <th>
            Visiting Time
        </th>
        <th>Action</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VNIC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VfirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VlastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VphoneNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.host_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.host_email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditVisitor", new { id = item.ID }) |
                @Html.ActionLink("Delete", "DeleteVisitor", new { id = item.ID })
            </td>
        </tr>
    }

</table>
        </div>
}

@section JS {
    <script type="text/javascript" src="@Href("~/Scripts/chosen.ajaxaddition.jquery.js")"></script>
    <script type="text/javascript">

        $(document).ready(function () {
            $(".datepicker").datepicker({ dateFormat: 'yy-mm-dd' });
            $('#visitor-table').DataTable();
        });

    </script>
}