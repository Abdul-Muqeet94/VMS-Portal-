@{
    ViewBag.Title = "EditVisitor";
    Layout = "~/Views/Shared/_LayoutVisitor.cshtml";
}

@model  BLL.ViewModels.EditViewModel


<div class="row">
    <div class="form-group col-md-12">
 

        @using (Html.BeginForm("EditVisitor", "PreVisitor", FormMethod.Post, new { id = "Visitor-form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
            <br/><br/>
            <div class="row">

                <div class="col-md-6">
                    <label class="control-label">NIC</label>
                    <input type="text" class="form-control" name="VNIC" id="VNIC" value="@Model.VNIC">
                </div>
          
                <div class="col-md-6">
                    <label class="control-label">First Name</label>
                    <input type="text" class="form-control" name="VfirstName" id="VfirstName" value="@Model.VfirstName" required>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label class="control-label">Last Name</label>
                    <input type="text" class="form-control" name="VlastName" id="VlastName" value="@Model.VlastName" required>
                </div>
         
                <div class="col-md-6">
                    <label class="control-label">Address</label>
                    <input type="text" class="form-control" name="Vaddress" id="Vaddress" value="@Model.Vaddress" required>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label class="control-label">Phone No</label>
                    <input type="text" class="form-control" name="VPhoneNo" id="VPhoneNo" value="@Model.VphoneNo" required>
                </div>
          
                <div class="col-md-6">
                    <label class="control-label">Comapny</label>
                    <input type="text" class="form-control" name="Vcompany" id="Vcompany" value="@Model.Vcompany" required>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label class="control-label">Old Hosts Name</label>
                    <input type="text" class="form-control" name="hosts_name" id="hosts_name" value="@Model.host_name" required>
                </div>
          
                <div class="col-md-6">
                    <label class="control-label">New Hosts Name</label>

                    <select class="form-control" name="host_id" required>
                        <option selected="selected" disabled="disabled" value="@Model.host_name">Select Hosts</option>
                        @foreach (BLL.ViewModels.Hosts hosts in Model.hosts)
                        {
                            <option value="@hosts.EmpID">@hosts.hFirst @hosts.hLast</option>
                        }
                    </select>

                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label class="control-label">email</label>
                    <input type="text" class="form-control" name="host_email" id="host_email" value="@Model.host_email" required>
                </div>
       
                <div class="col-md-6">
                    <label class="control-label">Date</label>
                    <input class="form-control datepicker" name="from_date" id="from_date" value="@Model.date" required>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label class="control-label">Time</label>
                    <input class="form-control timepicker" name="time" id="time" value="@Model.time" required>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12" style="margin-top:5px">
                    <button type="submit" class="btn-primary" value="Submit">Add Visitor</button>
                    <button type="reset" class="btn-primary" value="Reset">Reset</button>
                </div>
            </div>
        }

        @section JS {
            <script type="text/javascript" src="@Href("~/Scripts/chosen.ajaxaddition.jquery.js")"></script>
            <script type="text/javascript" src="@Href("~/Scripts/monthpicker.js")"></script>
            <script type="text/javascript">
                $(document).ready(function () {
                    $(".datepicker").datepicker({ dateFormat: 'dd-mm-yy' });
                    $('.timepicker').timepicki();
                });

            </script>
        }
