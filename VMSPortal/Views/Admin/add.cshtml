@{
    ViewBag.Title = "add";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@model  BLL.ViewModels.CreateUser

<div class="row">
    <div class="form-group col-md-3">
        <h5 style="font-weight: bold;">Register User</h5>

        @using (Html.BeginForm("add", "Admin", FormMethod.Post, new { id = "employee-form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
            <div class="row">

                <div class="col-md-12">
                    <label class="control-label">Name</label>
                    <input type="text" class="form-control" name="name" id="name" value=" " required>
                </div>
            </div>

           

             <div class="row">
                <div class="col-md-12">
                    <label class="control-label">Password</label>
                    <input type="password" class="form-control" name="password" id="password" value="" required>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <label class="control-label">Access Group</label>

                  

                    <select class="form-control" name="acessgroup_id" required>
                        <option selected="selected" disabled="disabled" value="0">Select Access Group</option>
                        @foreach (BLL.ViewModels.AccessGroup group in Model.accessGroup)
                        {
                            <option value="@group.accessGroupId">@group.name</option>
                        }
                    </select>



                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <label class="control-label">Designation</label>

                   

                    <select class="form-control" name="company_id" required>
                        <option selected="selected" disabled="disabled" value="0">Select Comapny</option>

                        @foreach (BLL.ViewModels.Company item in Model.company)
                        {
                            <option value="@item.CompanyID">@item.CompanyName</option>
                        }
                    </select>

                </div>
            </div>
               <div class="row">
                <div class="col-md-12" style="margin-top:5px">
                    <button type="submit" class="btn-primary" value="Submit">Add User</button>
                    <button type="reset" class="btn-primary" value="Reset" >Reset</button>
                </div>
            </div>
        }
