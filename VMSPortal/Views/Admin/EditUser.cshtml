@{
    ViewBag.Title = "EditUser";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>EditUser</h2>
@model  BLL.ViewModels.Users

<div class="row">
    <div class="form-group col-md-3">
        <h5 style="font-weight: bold;">Register User</h5>

        @using (Html.BeginForm("EditUser", "Admin", FormMethod.Post, new { id = "Visitor-form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
            <div class="row">

                <div class="col-md-12">
                    <label class="control-label">Name</label>
                    <input type="text" class="form-control" name="name" id="name" value="@Model.name" required>
                </div>
            </div>



            <div class="row">
                <div class="col-md-12">
                    <label class="control-label">Password</label>
                    <input type="password" class="form-control" name="password" id="password" required>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <label class="control-label">Access Group</label>



                    <select class="form-control" name="acessgroup_id" required>
                        <option selected="selected"  value="@Model.accessgroup_name">Select Access Group</option>
                        @foreach (BLL.ViewModels.AccessGroup group in Model.create_user.accessGroup)
                        {
                            <option value="@group.accessGroupId">@group.name</option>
                        }
                    </select>



                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <label class="control-label">Designation</label>



                    <select class="form-control" name="company_id" required>
                        <option selected="selected" value="@Model.compnay_name">Select Comapny</option>

                        @foreach (BLL.ViewModels.Company item in Model.create_user.company)
                        {
                            <option value="@item.CompanyID">@item.CompanyName</option>
                        }
                    </select>

                </div>
            </div>
         
             <div class="col-md-12" style="display:none">
                    <label class="control-label">Name</label>
                 <input type="text" class="form-control" name="userId" id="userId" value="@Model.userId" required>
                </div>
          
            <div class="row">
                <div class="col-md-12" style="margin-top:5px">
                    <button type="submit" class="btn-primary" value="Submit">Update User</button>
                    <button type="reset" class="btn-primary" value="Reset">Reset</button>
                </div>
            </div>
        }
